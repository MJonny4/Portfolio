---
export interface Props {
    name: string
}

const { name } = Astro.props
---

<span
    class='absolute right-2.5 top-7 h-3 w-3 rotate-45 transform border-r border-t border-zinc-200 bg-zinc-300 opacity-0 group-hover:opacity-100 dark:border-zinc-800 dark:bg-zinc-900'
></span>
<span
    class='absolute left-1/2 top-8 -translate-x-1/2 transform rounded-md border border-zinc-200 bg-zinc-300 px-2 py-1 text-xs opacity-0 transition duration-300 ease-in-out group-hover:opacity-100 dark:border-zinc-800 dark:bg-zinc-900'
>
    {name}
</span>
